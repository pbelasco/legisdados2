= form_for @orgao do |f|
  - if @orgao.errors.any?
    #error_explanation
      %h2= "#{pluralize(@orgao.errors.count, "error")} prohibited this orgao from being saved:"
      %ul
        - @orgao.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :id
    = f.text_field :id
  .field
    = f.label :sigla
    = f.text_field :sigla
  .field
    = f.label :descricao
    = f.text_field :descricao
  .actions
    = f.submit 'Save'
